{
    "name": "namnvhue/php-eventloop-performance",
    "description": "Load Performance test for ReactPHP Event Loop.",
    "keywords": ["PHP", "event-loop", "asynchronous"],
    "require": {
        "php": ">=5.3.0",
        "react/event-loop": "^1.1",
        "react/socket": "^1.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0 || ^6.4 || ^5.7 || ^4.8.35"
    },
    "suggest": {
        "ext-event": "~1.0 for ExtEventLoop",
        "ext-pcntl": "For signal handling support when using the StreamSelectLoop",
        "ext-uv": "* for ExtUvLoop"
    },
    "autoload": {
        "psr-4": {
            "React\\EventLoop\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "React\\Tests\\EventLoop\\": "tests"
        }
    }
}
